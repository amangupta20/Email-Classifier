{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Email Classification Schema v2",
  "description": "Schema for Qwen 3 LLM output - validated by Pydantic v2",
  "type": "object",
  "required": [
    "message_id",
    "primary_category",
    "confidence",
    "schema_version"
  ],
  "properties": {
    "message_id": {
      "type": "string",
      "description": "Stable email identifier from IMAP (UID or generated hash)"
    },
    "primary_category": {
      "type": "string",
      "pattern": "^[a-z]+\\.[a-z_]+$",
      "description": "Hierarchical category (e.g., 'academic.exams', 'career.internship')"
    },
    "secondary_categories": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z]+\\.[a-z_]+$"
      },
      "maxItems": 3,
      "description": "Up to 3 secondary categories for multi-tag assignment"
    },
    "priority": {
      "type": "string",
      "enum": ["low", "normal", "high", "urgent"],
      "description": "Processing priority based on urgency"
    },
    "deadline_utc": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "ISO8601 UTC timestamp if deadline detected"
    },
    "deadline_confidence": {
      "type": "string",
      "enum": ["extracted", "inferred", "none"],
      "description": "How the deadline was determined (if present)"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Classification confidence score [0.0-1.0]"
    },
    "rationale": {
      "type": "string",
      "maxLength": 200,
      "description": "LLM reasoning for the classification (max 200 chars)"
    },
    "detected_entities": {
      "type": "object",
      "properties": {
        "course_codes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "company_names": {
          "type": "array",
          "items": { "type": "string" }
        },
        "event_names": {
          "type": "array",
          "items": { "type": "string" }
        },
        "professor_names": {
          "type": "array",
          "items": { "type": "string" }
        },
        "amounts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "value": { "type": "number" },
              "currency": { "type": "string" }
            }
          }
        },
        "locations": {
          "type": "array",
          "items": { "type": "string" }
        },
        "phone_numbers": {
          "type": "array",
          "items": { "type": "string" }
        },
        "urls": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "description": "Extracted entities for further processing"
    },
    "sentiment": {
      "type": "string",
      "enum": ["positive", "neutral", "negative", "urgent"],
      "description": "Overall sentiment analysis of email content"
    },
    "action_items": {
      "type": "array",
      "maxItems": 10,
      "items": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "description": "Brief action description"
          },
          "deadline_utc": {
            "type": ["string", "null"],
            "format": "date-time",
            "description": "Action deadline"
          },
          "completed": { "type": "boolean", "default": false }
        },
        "required": ["action"]
      },
      "description": "Extracted actions requiring user attention"
    },
    "thread_context": {
      "type": "object",
      "properties": {
        "is_reply": { "type": "boolean" },
        "thread_id": { "type": ["string", "null"] },
        "previous_categories": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "description": "Email thread information for context"
    },
    "rag_context_used": {
      "type": "array",
      "items": { "type": "string" },
      "description": "IDs of RAG knowledge base chunks used for classification"
    },
    "suggested_folder": {
      "type": "string",
      "description": "Recommended mail client folder path"
    },
    "schema_version": {
      "type": "string",
      "const": "v2",
      "description": "Schema version for backward compatibility"
    }
  },
  "additionalProperties": false
}
