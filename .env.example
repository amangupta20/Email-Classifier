# ===============================
# Backend / Core Environment
# ===============================
# External Supabase (PostgreSQL + pgvector)
SUPABASE_PROJECT_REF=your-supabase-project-ref
SUPABASE_API_URL=https://your-supabase-project-ref.supabase.co
SUPABASE_DB_URL=postgresql://postgres.[your-supabase-project-ref]:password@db.[your-supabase-project-ref].supabase.co:5432/postgres
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
# Application DB URL references Supabase
DATABASE_URL=${SUPABASE_DB_URL}
VECTOR_SCHEMA=email_vector

SECRET_KEY=your-secret-key-here

# Email / SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# AI Provider Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# External Ollama endpoint (managed separately)
OLLAMA_API_URL=https://ollama.your-domain.com

# ===============================
# Monitoring & Metrics
# ===============================
METRICS_ENABLED=True
METRICS_PORT=8000

PROMETHEUS_SCRAPE_INTERVAL=15s
PROMETHEUS_RETENTION_DAYS=15

GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me
GRAFANA_PUBLIC_URL=http://localhost:3001

# ===============================
# Frontend Environment
# ===============================
REACT_APP_API_BASE_URL=http://localhost:8000

# ===============================
# Development Settings
# ===============================
DEBUG=True
LOG_LEVEL=INFO