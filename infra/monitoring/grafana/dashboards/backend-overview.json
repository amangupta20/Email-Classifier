{
  "__inputs": [],
  "__requires": [
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1"
    },
    {
      "type": "panel",
      "id": "graph",
      "name": "Graph",
      "version": ""
    }
  ],
  "uid": "backend-overview",
  "title": "Backend Overview",
  "tags": ["backend", "fastapi", "infrastructure"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "editable": true,
  "style": "dark",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["15s", "30s", "1m", "5m", "15m", "1h"]
  },
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus_ds"
        },
        "refresh": 1,
        "query": "label_values(http_requests_total, service)",
        "current": {
          "text": "backend",
          "value": "backend"
        },
        "includeAll": false,
        "multi": false,
        "hide": 0
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "enable": true,
        "hide": false,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Up (Backend)",
      "id": 1,
      "gridPos": { "x": 0, "y": 0, "w": 3, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus_ds" },
      "targets": [
        {
          "expr": "up{job=\"backend\"}",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Request Rate (RPS)",
      "id": 2,
      "gridPos": { "x": 3, "y": 0, "w": 9, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus_ds" },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"backend\"}[5m]))",
          "legendFormat": "RPS",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "type": "timeseries",
      "title": "Error Rate (5xx %)",
      "id": 3,
      "gridPos": { "x": 0, "y": 4, "w": 6, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus_ds" },
      "targets": [
        {
          "expr": "100 * (sum(rate(http_requests_total{job=\"backend\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=\"backend\"}[5m])))",
          "legendFormat": "5xx %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 2 },
              { "color": "red", "value": 5 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "type": "timeseries",
      "title": "Latency p95 (s)",
      "id": 4,
      "gridPos": { "x": 6, "y": 4, "w": 6, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus_ds" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"backend\"}[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "type": "timeseries",
      "title": "In-Progress Requests",
      "id": 5,
      "gridPos": { "x": 0, "y": 12, "w": 6, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus_ds" },
      "targets": [
        {
          "expr": "sum(http_requests_in_progress{job=\"backend\"})",
          "legendFormat": "in-flight",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "none" }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } }
    },
    {
      "type": "timeseries",
      "title": "Request Duration Histogram (rate)",
      "id": 6,
      "gridPos": { "x": 6, "y": 12, "w": 6, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus_ds" },
      "targets": [
        {
          "expr": "sum by (le) (rate(http_request_duration_seconds_bucket{job=\"backend\"}[5m]))",
          "legendFormat": "le={{le}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
      "options": { "legend": { "displayMode": "table", "placement": "right" } }
    }
  ]
}
